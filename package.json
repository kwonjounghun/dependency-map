{
	"name": "react-dependency-map",
	"displayName": "dependency-map",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:react-dependency-map.helloWorld"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "react-dependency-map.helloWorld",
				"title": "Hello World"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "react-dependency-map.helloWorld",
					"title": "Hello World"
				}
			]
		},
		"configuration": {
            "title": "react-dependency-map", 
            "properties": {
                "react-dependency-map.exclude": {
                    "type": "string",
                    "scope": "resource",
                    "default": "node_modules/",
                    "description": "Define a regex to exclude dependencies for being listed"
                },
                "react-dependency-map.maxDepth": {
                    "type": "number",
                    "scope": "resource",
                    "default": 0,
                    "minimum": 0,
                    "maximum": 99,
                    "description": "the maximum depth to cruise; 0 <= n <= 99 (default: 0, which means 'infinite depth')"
                },
                "react-dependency-map.layout": {
                    "type": "string",
                    "scope": "resource",
                    "default": "directed",
                    "enum": ["directed", "undirected", "undirectedCompressed", "clustered", "circular", "radial", "treemap"],
                    "description": "Layout for the diagram"
                },
                "react-dependency-map.prefix": {
                    "type": "string",
                    "scope": "resource",
                    "description": "Prefix to add to each node URL. For example, you can use this to alllow opening the file in github"
                },
                "react-dependency-map.moduleSystems": {
                    "type": "array",
                    "scope": "resource",
                    "default": ["amd", "cjs", "es6"],
                    "description": "Define the module systems to be used. Supported: ['amd', 'cjs', 'es6', 'tsd']"
                },
                "react-dependency-map.tsConfig": {
                    "type": "string",
                    "scope": "resource",
                    "default": "tsconfig.json",
                    "description": "Specify the path for the typescript configuration file"
                },
                "react-dependency-map.webpackConfig": {
                    "type": "object",
                    "scope": "resource",
                    "default": "webpack.config.js",
                    "description": "Specify the path for the webpack configuration file"
                },
                "react-dependency-map.outputType": {
                    "type": "string",
                    "scope": "resource",
                    "default": "node",
                    "enum": ["top", "folder", "node"],
                    "description": "The output type will specify the tree be generated."
                },
                "react-dependency-map.theme": {
                    "type": "string",
                    "scope": "resource",
                    "default": "basic",
                    "enum": ["basic", "simple", "blueprint", "flat", "custom"],
                    "description": "The output type will specify the tree be generated."
                },
                "react-dependency-map.customTheme": {
                    "type": "object",
                    "scope": "resource",
                    "description": "json for own graph style"
                }
            }
        }
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
        "build": "parcel build -t node --no-source-maps --bundle-node-modules node_modules/dependency-cruiser/src/main/index.js --out-file dependencyCruiser.js",
		"lint": "eslint .",
		"pretest": "yarn run lint",
		"test": "node ./test/runTest.js"
	},
	"dependencies": {
        "dependency-cruiser": "^8.1.0",
        "viz.js": "^2.1.2"
    },
	"devDependencies": {
		"@types/vscode": "^1.57.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"parcel-bundler": "^1.12.4",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}